<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Behold, the Holy Bro Code"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textSize="20sp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disable me, bro??"
        android:textSize="16sp"
        android:id="@+id/enabler"
        android:checked="true"
        android:layout_marginTop="32dp"
        android:thumbTintMode="multiply"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:id="@+id/sim_grp"
            android:saveEnabled="true">

            <RadioButton
                android:id="@+id/sim_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sim 1"/>

            <RadioButton
                android:id="@+id/sim_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sim 2"/>

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="While the story of the Bro Code is not as nearly as simple and elegant as God handing down the stone tablet to Moses, its origin weave all the way back to the dawn of humanity." />


</LinearLayout>